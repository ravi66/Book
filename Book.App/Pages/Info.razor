@page "/info"

<PageTitle>@BookName - @Localizer["Info"]</PageTitle>

<MudPaper Class="pa-2" Elevation="5">
    <MudGrid Class="align-center">
        <MudItem>
            <MudIconButton Icon="@Icons.Material.Filled.Info" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="Back" Title="@Localizer["BackToSummary"]"/>
        </MudItem>
        <MudItem>
            <MudText Typo="Typo.h4">@Localizer["Book"] @Version</MudText>
        </MudItem>
        @if (VisitCount > -1)
        {
            <MudItem>
                <MudText Typo="Typo.h4">@Localizer["Visited"] @VisitCount @Localizer["Times"]</MudText>
            </MudItem>
        }
    </MudGrid>
</MudPaper>

<MudStack Class="mb-4">
    <MudPaper Class="pa-4" Elevation="5">
        <MudText Typo="Typo.h5" >
            @Localizer["MoreInfoText"]
        </MudText>
    </MudPaper>
    <MudPaper Class="pa-4" Elevation="5">
        <MudText Typo="Typo.h4">@Localizer["Credits"]</MudText>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center" Style="max-height: 150px;">
                <MudImage Src="images/blazor_logo.png" Alt="@Localizer["BlazorLogo"]" Class="mx-3" Width="150" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor" Target="_blank">@Localizer["BlazorWasm"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["BlazorText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center">
                <MudImage Src="images/efcore_logo.png" Alt="@Localizer["EFCoreLogo"]" Class="rounded-lg mx-3" Width="250" Height="150" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://docs.microsoft.com/en-us/ef/core/" Target="_blank">@Localizer["EFCore"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["EFCoreText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center " Style="min-height: 120px;">
                <MudImage  Src="images/fluent-validation-logo.png" Alt="@Localizer["FluentValidationLogo"]" Class="mx-3" Width="250" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://github.com/FluentValidation/FluentValidation/" Target="_blank">@Localizer["FluentValidation"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["FVText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center">
                <MudImage Src="images/mudblazor.png" Alt="@Localizer["MudBlazorLogo"]" Class="mx-3" Fluid="true" Width="250" Height="150" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://mudblazor.com/" Target="_blank">@Localizer["MudBlazor"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["MudBlazorText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center" >
                <MudImage Src="images/sqlite_logo.gif" Alt="@Localizer["SqliteLogo"]" Class="rounded-lg mx-3" Width="250" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://github.com/JeremyLikness/SqliteWasmHelper" Target="_blank">@Localizer["SqliteWasmHelper"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["SqliteWasmHelperText"]"</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center " >
                <MudImage Src="images/Trackor.png" Alt="@Localizer["TrackorLogo"]" Class="mx-3" Width="150" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://github.com/eric-king/trackor/" Target="_blank">@Localizer["Trackor"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["TrackorText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudStack>