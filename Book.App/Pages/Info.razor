@page "/info"

<PageTitle>@BookName - @Localizer["About"]</PageTitle>

<MudPaper Class="pa-2" Elevation="5">
    <MudGrid Class="align-center">
        <MudItem>
            <MudIconButton Icon="@Icons.Material.Filled.Info" Variant="Variant.Text" Color="Color.Info" Size="Size.Large" />
        </MudItem>
        <MudItem>
            <MudText Typo="Typo.h4">@Localizer["Book"] @Version</MudText>
        </MudItem>
    </MudGrid>
</MudPaper>

<MudStack Class="mb-4">
    <MudPaper Class="pa-4" Elevation="5">
        <MudText Typo="Typo.h5" >
            @Localizer["MoreInfoText"]
        </MudText>
    </MudPaper>
    <MudPaper Class="pa-4" Elevation="5">
        <MudText Typo="Typo.h4">@Localizer["Credits"]</MudText>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center" >
                <MudImage Src="images/blazor_logo.png" Alt="@Localizer["BlazorLogo"]" Class="mx-3" Width="150" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor" Target="_blank">@Localizer["BlazorWasm"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["BlazorText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center">
                <MudImage Src="images/efcore_logo.png" Alt="@Localizer["EFCoreLogo"]" Class="mx-3" Width="250" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://docs.microsoft.com/en-us/ef/core/" Target="_blank">@Localizer["EFCore"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["EFCoreText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center " Style="min-height: 120px;">
                <MudImage  Src="images/fluent-validation-logo.png" Alt="@Localizer["FluentValidationLogo"]" Class="mx-3" Width="250" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://github.com/FluentValidation/FluentValidation/" Target="_blank">@Localizer["FluentValidation"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["FVText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center">
                <MudImage Src="images/mudblazor.png" Alt="@Localizer["MudBlazorLogo"]" Class="mx-3" Fluid="true" Width="250" Height="150" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://mudblazor.com/" Target="_blank">@Localizer["MudBlazor"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["MudBlazorText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center">
                <MudImage Src="images/apexcharts.png" Alt="@Localizer["ApexChartsLogo"]" Class="mx-3" Fluid="true" Width="250" Height="150" />
            </MudItem>
            <MudItem xs="9">
                <MudStack AlignItems="AlignItems.Center" Row="true">
                    <MudLink Typo="Typo.h5" Href="https://apexcharts.com/" Target="_blank">@Localizer["ApexCharts"]</MudLink> /
                    <MudLink Typo="Typo.h5" Href="https://github.com/apexcharts/Blazor-ApexCharts/" Target="_blank">@Localizer["BlazorApexCharts"]</MudLink>
                </MudStack>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["ApexChartsText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center" >
                <MudImage Src="images/bit_platform.png" Alt="@Localizer["BitBesqlLogo"]" Class="rounded-lg mx-3" Width="250" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://bitplatform.dev/besql/overview" Target="_blank">@Localizer["BitBesql"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["BitBesqlText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
    <MudPaper Class="pa-2" Elevation="5">
        <MudGrid>
            <MudItem xs="3" Class="d-flex justify-center align-center " >
                <MudImage Src="images/Trackor.png" Alt="@Localizer["TrackorLogo"]" Class="mx-3" Width="150" Height="150" Fluid="true" />
            </MudItem>
            <MudItem xs="9" >
                <MudLink Typo="Typo.h5" Href="https://github.com/eric-king/trackor/" Target="_blank">@Localizer["Trackor"]</MudLink>
                <MudDivider Class="mt-1 mb-2" />
                <MudText Typo="Typo.body1">@Localizer["TrackorText"]</MudText>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudStack>

@code
{
    [Inject] internal IBookSettingSvc BookSettingSvc { get; set; } = default!;

    [Inject] public NavigationManager NavigationManager { get; set; } = default!;

    string Version { get; set; } = Constants.BookVersion;

    string BookName { get; set; } = string.Empty;

    protected async override Task OnInitializedAsync()
    {
        BookName = await BookSettingSvc.GetBookName();
    }
}