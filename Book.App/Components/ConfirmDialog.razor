<MudDialog>
    <DialogContent>
        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="1">
            @((MarkupString)ConfirmationMessage)
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudIconButton Icon="@Icons.Material.Filled.Cancel" OnClick="Close" Color="@CancelColor" Size="Size.Large" />
        <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" OnClick="Done" Color="@DoneColor" Size="Size.Large" />
    </DialogActions>
</MudDialog>
