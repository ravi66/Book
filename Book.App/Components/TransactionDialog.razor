@using System.Globalization
@using System.ComponentModel.DataAnnotations
@using Book.Models

<MudDialog>
    <DialogContent>
        <EditForm Model="@Transaction" OnValidSubmit="HandleValidSubmit">
            <MudStack>
                <MudCard Elevation="5" Style="width:50%">
                    <MudTextField
                        Variant="Variant.Outlined" 
                        Label="Value" 
                        Margin="Margin.Dense"
                        @bind-Value=Transaction.ValueAsString
                        For="@(() => Transaction.ValueAsString)"
                        AutoFocus="true"
                        onFocus="this.select()" />
                </MudCard>
                <MudCard Elevation="5">
                    <MudAutocomplete 
                        T="TransactionType"
                        Label="Type"
                        Style="width: 100%;" 
                        Variant="Variant.Outlined" 
                        Margin="Margin.Dense" 
                        @bind-Value="_SelectedTransactionType"
                        Dense="true"
                        SearchFunc="@TypeSearch"
                        ToStringFunc="@(t => t == null ? null : $"{t.Name}")" />
                </MudCard>
                <MudCard Elevation="5">
                    <MudDatePicker
                        Variant="Variant.Outlined"
                        Label="Dated"
                        Required="true"
                        RequiredError="Transactions must be Dated"
                        @bind-Date="_SelectedDate"
                        PickerVariant="PickerVariant.Dialog"
                        DisableToolbar="true"
                        Margin="Margin.Dense"
                        Editable="true" />
                </MudCard>
                <MudCard Elevation="5">
                    <MudTextField
                        Variant="Variant.Outlined"
                        @bind-Value="Transaction.Notes"
                        Label="Notes"
                        Lines="3"/>
                </MudCard>
                <MudCard Elevation="5">
                    <MudText>
                        Created: @Transaction.CreateDate.ToShortDateString()
                    </MudText>
                </MudCard>

            </MudStack>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudIconButton ButtonType="ButtonType.Submit" Icon="@Icons.Material.Filled.Save" Variant="Variant.Filled" Color="Color.Primary" OnClick="HandleValidSubmit" />
        <MudIconButton Icon="@Icons.Material.Filled.Cancel" Variant="Variant.Filled" Color="Color.Primary" OnClick="Close" />
    </DialogActions>
</MudDialog>
