@using Microsoft.AspNetCore.Components;
@using MudBlazor;

<MudDialog>
    <DialogContent>
        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="1" >
            @((MarkupString)PromptMessage)
            <MudIconButton Icon="@Icons.Material.Filled.Cancel" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" OnClick="Close" aria-label="close" />
        </MudStack>
    </DialogContent>
</MudDialog>

@code
{
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string PromptMessage { get; set; }

    void Close() => MudDialog.Close(DialogResult.Ok(true));
}
