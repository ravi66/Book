<MudDialog ClassContent="@ContentClass" >
    <DialogContent>
        @if (Warning)
        {
            <MudPaper Elevation="5">
                <MudText Typo="Typo.h3" Color="Color.Warning" Align="Align.Center">@Localizer["WarningUpp"]</MudText>
            </MudPaper>
            @if (!string.IsNullOrEmpty(WarningMessage))
            {
                <MudPaper Elevation="5" Class="pa-2">
                    <MudText Typo="Typo.h5" Color="Color.Warning" Align="Align.Center">@WarningMessage</MudText>
                </MudPaper>
            }
        }
        <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
            <MudFab Class="pa-2 my-1" Color="@AcceptColour" Title="@AcceptToolTip" Label="@AcceptLabel" StartIcon="@Icons.Material.Filled.CheckCircle" OnClick="Accept" Size="Size.Large" />
            <MudFab Class="pa-2 my-1" Color="@CancelColour" Title="@CancelToolTip" Label="@CancelLabel" StartIcon="@Icons.Material.Filled.Cancel" OnClick="Close" Size="Size.Large" />
        </MudStack>
    </DialogContent>
</MudDialog>